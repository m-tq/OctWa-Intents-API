# Intents API Configuration
PORT=3001

# Octra Chain
OCTRA_RPC_URL=https://octra.network
OCTRA_ESCROW_ADDRESS=octra1escrow...
OCTRA_PRIVATE_KEY=your_octra_escrow_private_key_base64  # Base64 encoded, for ETH→OCT fulfillment

# Sepolia Chain
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_KEY
SEPOLIA_PRIVATE_KEY=your_sepolia_hot_wallet_private_key
SEPOLIA_ESCROW_ADDRESS=0x...  # ETH escrow for ETH→OCT swaps

# Oracle Configuration
ORACLE_INITIAL_RATE=0.001           # Initial rate: 1 OCT = 0.001 ETH
ORACLE_ADJUSTMENT_FACTOR=0.01       # 1% price adjustment per volume threshold
ORACLE_VOLUME_THRESHOLD=100         # OCT volume to trigger price adjustment
ORACLE_MAX_ADJUSTMENT=0.10          # Max ±10% deviation from base rate
ORACLE_WINDOW_HOURS=1               # Volume window duration (hours)
ORACLE_MIN_RATE_PERCENT=50          # Min rate = 50% of initial
ORACLE_MAX_RATE_PERCENT=200         # Max rate = 200% of initial

# Fee
FEE_BPS=50  # 0.5% fee

# Security - Swap Limits
MIN_SWAP_OCT=1              # Minimum OCT amount per swap
MAX_SWAP_OCT=100000         # Maximum OCT amount per swap
MIN_SWAP_ETH=0.0001         # Minimum ETH amount per swap
MAX_SWAP_ETH=10             # Maximum ETH amount per swap

# Security - Debug Mode
DEBUG_MODE=false            # Enable debug endpoints (set to true only in development)

# Security - CORS Allowed Origins (comma-separated)
# Leave empty to allow all origins (dev mode)
# Production example: https://dex.octwa.io,https://app.octwa.io
ALLOWED_ORIGINS=
